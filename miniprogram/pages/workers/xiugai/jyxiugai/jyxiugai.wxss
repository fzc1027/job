  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 1rpx #fff solid;
  border-bottom-color: #a9a9a9;
  padding-left: 50rpx;
  padding-right: 20rpx;
  background-color: #fff;
}
.nameleft{
  width: 90%;
  height:120rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;

}
.name1{
  height:120rpx;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  font-size: 30rpx;
}
.name2{
  height:120rpx;
  display: flex;
