.apply{
  width:100%;
  background-color:#f7f7ff;
  display: flex;
  flex-direction: culum;
  justify-content: center;
  flex-wrap: wrap;
}
/*身份证上传*/
.ID-mian{
  border:4rpx solid #f7f7ff;
  border-bottom-color: #9a9a9a;
  width:96%;
  display: flex;
  flex-direction: culum;
  justify-content: center;
  flex-wrap: wrap;
  background: #f7f7ff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.card-name{
  width:100%;
  color: #000;
  font-size: 40rpx;
  font-weight: bold
}
.card-cont{
  width: 100%;
  display:flex;
  justify-content: space-around;
  align-items: flex-start;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.card-list{
  width:48%;
  display:flex;
  flex-direction: culum;
  justify-content: center;
  flex-wrap: wrap;
  align-items: flex-start;
}
.card-list image{
  width: 100%;
  height :300rpx;
}
.card-list view{
  text-align: center;
  margin-top: 10rpx;
  color: #9a9a9a;
  font-size: 30rpx;
}
/*姓名*/
.name{
  color:#9a9a9a;
  width:96%;
  height:120rpx;
  background: #f7f7ff;
  margin-top: 20rpx;
  font-size: 35rpx;
}
.placeholder{
  width: 100%;
 height: 70rpx;
  border: 2rpx#9a9a9a solid;
  color:#000;
}


/*出生日期*/
.date{
  width: 100%;
  height:70rpx;
  border: 2rpx #9a9a9a solid;
  display: flex;
  align-items: center;
  color: #000;
}
/*城市*/
.city{
  width: 100%;
  height:70rpx;
  border: 2rpx #9a9a9a solid;
  color:#000;
  display: flex;
  align-items: center;
}
.sex{
  width: 100%;
  height:70rpx;
  border: 2rpx #9a9a9a solid;
  color:#000;
  display: flex;
  align-items: center;
}
/*工作经验*/
.jingyan{
  color:#9a9a9a;
  width:96%;
  background: #f7f7ff;
  margin-top: 20rpx;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.jingyanText{
   width: 100%;
  border: 2rpx #9a9a9a solid;
  color:#000;
  display: flex;
  align-items: flex-start;
}
/*申请按钮*/
.shenqing{
  width:80%;
  height:80rpx;
  border: 1rpx #477CFE solid;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  background-color: #477CFE;
  color:#FFF;
  border-radius: 7rpx;
  font-size:30rpx;
  margin-bottom: 50rpx;
}