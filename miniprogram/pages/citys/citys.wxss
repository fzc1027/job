/*搜索框*/
.search-container {
    position: fixed;
    display: flex;
    box-sizing: border-box;
    padding: 20rpx 20rpx;
    width: 100%;
    z-index: 1;
    background-color: #477CFE;
}




.search-container .search-input {
    flex: 1;
    background-color:#fff;
    border-radius: 5rpx;
    font-size: 24rpx;
    padding: 2rpx 30rpx;
    padding-left: 60rpx;
    color: #000;
    position: relative;
    margin: 0 20rpx;
}

.search-container .search-input i{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.search-container .search-input i image {
    width: 100%;
    height: 100%;
    object-fit: contain;
}
