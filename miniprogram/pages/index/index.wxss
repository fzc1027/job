/**index.wxss**/

.search-container {
    position: fixed;
    display: flex;
    box-sizing: border-box;
    padding: 20rpx 20rpx;
    width: 100%;
    
    
    z-index: 1;
    
    background-color: #477CFE;
}




.search-container .search-input {
    flex: 1;
    background-color:#fff;
    border-radius: 5rpx;
    font-size: 24rpx;
    padding: 2rpx 30rpx;
    padding-left: 60rpx;
    color: #000;
    position: relative;
    margin: 0 20rpx;
}

.search-container .search-input i{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    
    top: 50%;
    transform: translateY(-50%);
}

.search-container .search-input i image {
    width: 100%;
    height: 100%;
    object-fit: contain;
}
.place-holder {
    color: #e0e0e0;
}


.search-container .jobwant {
background-color: darkorange;
width: 30%;
border-radius: 5rpx;
}
.search-container .jobwant .jobwant-name{
  display: flex; /*设置显示样式**/
  justify-content: center; /**内容居中*/
  flex-direction: row;

}

/* 一级导航 */

.navList1 {
  
  width:100%;
  height: 150rpx;
  display:flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-end;
  background-color: #477CFE;
  position: relative;

}
.navList1 .nav-itemno{
  height: 50rpx;
  width: 23%;
  display: flex;
	flex-direction: row; 
  justify-content: center;
  align-items: center;
  background-color:#477CFE;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
}
.navList1 .nav-item{
  height: 50rpx;
  width: 23%;
  display: flex;
	flex-direction: row; 
  justify-content: center;
  align-items: center;
  background-color:#fc3;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
}


.navList1 .nav-name{
  color:#fff;
  font-size: 22rpx;
}
